@model MvcRadios.Models.RadiostypeViewModel

@{
    ViewData["Title"] = "Index";
}

<style>
    section{
        background-color:lightblue;
    }
    img.left{
        width:27%;
        float:left;
    }
    img.right{
        width:30%;
        float:right;
    }
    h1{
        text-align:center;
        font-size:3em;
    }
    h1+p{
        text-align:center;
        font-size:2em;
    }
    form p{
        text-align:center;
    }
    th{
        font-size:1.2em;
        font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }
    tbody{
        font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
</style>

<section>
    <img class="left" src="~/image/left.jpg" />

    <img class="right" src="~/image/right.jpeg" />

    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <form asp-controller="Radios" asp-action="Index" method="get">
        <p>
            <select asp-for="Radiotype" asp-items="Model.type">
                <option value="">All</option>
            </select>

            Name: <input type="text" name="SearchString" />
            <input type="submit" value="show" />
        </p>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Radios[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Radios[0].LaunchDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Radios[0].company)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Radios[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Radios[0].type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Radios[0].Generation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Radios[0].Rating)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Radios)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LaunchDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.company)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Generation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</section>